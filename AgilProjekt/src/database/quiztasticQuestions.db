CREATE TABLE categories{
    id INTEGER PRIMARY KEY,
    name TEXT
};

create table QUESTIONS{
    id INTEGER PRIMARY KEY,
    category_id INTEGER,
    question TEXT,
    correct_answer TEXT,
    answers TEXT,
    hints TEXT
    bookmark INTEGER
    FOREGIN KEY (category_id) REFERENCES categories(id),
};

